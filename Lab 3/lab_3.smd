# Variables initialization
# 1.  a = 0x1342;  #MIPS instruction:  addi $a0, $0, 0x1342
# 2.  b = 0x7321;  #MIPS instruction:  addi $a1, $0, 0x7321
# •  Arithmetic computation
# 3.  x = a + b;
# 4.  store the value of x to memory location at address 0x20;
# 5.  y = a - 0x1298;
# 6.  store the value of y to memory location at address 0x24;
# 7.  z = a*b*(x+y);
# 8.  store the value of z to memory location at address 0x28;
# •  If statement
# 9.  if(a < 0x2500){
# 10. x = x + 0x89;
# 11. a = 0x9;
# 12. store the value of x to memory location at 0x30;
# 13. }

# $a0 = a
# $a1 = b
# $s0 = x
# $s1 = y
# $s2 = z

# Initialize values
addi $a0, $0, 0x1342 # a
addi $a1, $0, 0x7321 # b

# x = a + b
add $s0, $a0, $a1

# Store x to memory address 0x20
addi $s2, $0, 0x20
sw $s0, 0($s2)

# y = a - 0x1298
addi $s2, $0, 0x1298
sub $s1, $a0, $s2

# store y to memory address 0x24
addi $s2, $0, 0x24
sw $s1, 0($s2)

# z = a*b*(x+y)
add $s2, $s0, $s1 # z = (x+y)
mult $s2, $a0     # z = z * a
mflo $s2
mult $s2, $a1     # z = z * b
mfhi $s2

# store z_hi to memory address 0x28
addi $a1, $0, 0x28
sw $s2, 0($a1)

mflo $s2

# store z_lo to memory address 0x2C
addi $a1, $0, 0x2C
sw $s2, 0($a1)

# If statement
# if (a < 0x2500)
addi $s3, $0, 0x2500
slt $s4, $a0, $s3
beq $s4, $0, end

# x = x + 0x89
addi $s0, $s0, 0x89

# a = 0x9
addi $a0, $0, 0x9

# store x to memory address 0x30
addi $s3, $0, 0x30
sw $s0, 0($s3)

# End of program if a >= 0x2500
end: